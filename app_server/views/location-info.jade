extends layout

include _includes/sharedHTMLfunctions

block content
  .row.page-header
    .col-lg-12
      h1= title
  .row
    .col-xs-12.col-md-9
      .row
        .col-xs-12.col-sm-6
          p.rating
            +outputRating(location.rating)
          p= location.address
          .panel.panel-primary
            .panel-heading
              h2.panel-title Opening hours
            .panel-body
             each date in location.openingtime
                p
                  | #{date.days} : 
                  if date.closed
                    | closed
                  else
                    | #{date.opening} - #{date.closing}

          .panel.panel-primary
            .panel-heading
              h2.panel-title Facilities
            .panel-body
              each facility in location.facilities
                span.label.label-warning
                  span.glyphicon.glyphicon-ok
                  | &nbsp;#{facility}
                | &nbsp;
        .col-xs-12.col-sm-6.location-map
          .panel.panel-primary
            .panel-heading
              h2.panel-title Location map
            .panel-body
               img.img-fluid.rounded(src='http://maps.googleapis.com/maps/api/staticmap?center=30.5233,50.4500&zoom=17&size=400x350&sensor=false&markers=51.455041,-0.9690884&scale=2')
 
      .row
        .col-xs-12
          .panel.panel-primary.review-panel
            .panel-heading
              a.btn.btn-default.pull-right(href="/location/review/new") Add review
              h2.panel-title Customer reviews
            .panel-body.review-container
              .row
            each review in location.reviews 
                .review
                  .well.well-sm.review-header
                    span.rating
                      +outputRating(review.rating)
                    span.reviewAuthor #{review.author}
                    small.reviewTimestamp #{review.date}
                  .col-xs-12
                    p !{(review.text).replace(/\n/g, '<br/>')}
    .col-xs-12.col-md-3
      p.lead
        !{(sideBar.textLide).replace(/\n/g, '<br/>')}
      p
        !{(sideBar.text).replace(/\n/g, '<br/>')}